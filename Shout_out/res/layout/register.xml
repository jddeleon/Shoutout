<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:fillViewport="true">
  <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:background="#fff">
 
        <!--  Header -->
        <LinearLayout 
            	android:orientation="vertical"
            	android:id="@+id/header"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@layout/header"
                android:paddingTop="5dip"
                android:paddingBottom="5dip">
         </LinearLayout>

        
        <!-- Registration Form -->
        <LinearLayout
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="10dip"
          android:layout_below="@id/header">
          <!-- First Name -->            
          <EditText android:id="@+id/reg_first"
              	android:hint="@string/first"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:singleLine="true"
                android:layout_marginBottom="20dip"/>
          <!--Last Name-->
          
          <EditText 
              	android:id="@+id/reg_last"
              	android:hint="@string/last"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:singleLine="true"
                android:layout_marginBottom="20dip"/>
          
          <!-- Username -->
          <EditText 
              	android:id="@+id/reg_username"
              	android:hint="@string/Usern"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="20dip"/>
          
          <EditText 
              	android:id="@+id/reg_age"
          		android:hint="@string/age"
          		android:layout_width="fill_parent"
          		android:layout_height="wrap_content"
       			android:singleLine="true"
       			android:layout_marginTop="5dip"
       			android:layout_marginBottom="20dip"/>
        
          <!--  Email -->
          
          <EditText 
              	android:id="@+id/reg_email"
              	android:hint="@string/email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:singleLine="true"
                android:layout_marginBottom="20dip"
                android:inputType="textEmailAddress"
                android:maxLines="1"/>
          <!-- Password -->
          
          <EditText 
              	android:id="@+id/reg_password"
              	android:hint="@string/Pass"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:inputType="textPassword"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="20dip"/>
          <!--Major  -->
          <EditText 
              	android:id="@+id/reg_major"
              	android:hint="@string/majorfield"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="20dip"/>
          <!-- Gender -->
          <!--Make seletion between Male and female instead of input  -->
          
          <!-- Register Button -->

          <Spinner
              android:id="@+id/gender_spinner"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" 
              android:entries="@array/gender"
              />

          <Button 
              	android:id="@+id/btnRegister"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:text="@string/Register"/>
          <!-- Link to Login Screen -->
          <Button 
              	android:id="@+id/btnlink_to_login"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="40dip"
                android:text="@string/alreadyreg"
                android:gravity="center"
                android:textColor="#025f7c"/>
        </LinearLayout>
  </RelativeLayout>
</ScrollView>